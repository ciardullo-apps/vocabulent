<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa441"
    android:orientation="vertical"
    tools:context="com.ciardullo.vocabuilder.activity.StartMenuActivity" >

    <ImageView
        android:id="@+id/imageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:src="@drawable/vocabulent" />

    <LinearLayout
        android:id="@+id/holderLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:src="@drawable/flag" />

        <TextView
            android:id="@+id/tvLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="@string/app_language"
            android:textColor="#000099"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:typeface="serif" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/holderLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/holderLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/btnTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_button"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onClickTraining"
                    android:text="@string/training"
                    android:textColor="#000099"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnTesting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_button"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onClickTesting"
                    android:text="@string/testing"
                    android:textColor="#000099"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnScores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_button"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="onClickScores"
                    android:text="@string/scores"
                    android:textColor="#000099"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cbSpeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/voice"
                android:clickable="true"
                android:onClick="onClickPrefSpeak"
                android:text="@string/speak"
                android:textSize="20dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>